<div id="userbox">
<% if user_signed_in?  %>
	<div class="avatarname">
		<div class="left">
      <%= image_avatar current_user %>
		</div>
		<div class="left">
			<span><%= link_to current_user.username, edit_user_registration_path %></span><br />
	  	<%= link_to "Sign Out", destroy_user_session_path, :method => :delete, :class => "o"  %>
		</div>
	</div>
<% else %>
	<div id="login_box">
  	<%= simple_form_for(:user, :url => session_path(:user)) do |f| %>
		<fieldset class="user_bar_row">
			<%= f.input :login, :label => false, :placeholder => t('activerecord.attributes.user.login') %>
			<%= f.input :password, :label => false, :placeholder => t('activerecord.attributes.user.password') %>
		  <div><%= f.button :submit, "Sign in"  %></div>
	  </fieldset>
	  <fieldset class="user_bar_row">
			<%= f.input :remember_me, :as=> :boolean, :wrapper_html => { :class => 'space_remember' } %>
	    <span><%= link_to "Forgot your password?", new_password_path(:user) %></span>
	  </fieldset>
	  <% end %>
	</div>
<% end %>
</div>
