<h1>Listing lists</h1>
<p id="notice"><%= notice %></p>
<table>
  <tr>
    <th>Name</th>
    <th>Private</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @lists.each do |list| %>
  <tr>
    <td><%= list.name %></td>
    <td><%= list.private %></td>
    <td><%= link_to 'Show', my_list_path(list) %></td>
    <td><%= link_to 'Edit', edit_my_list_path(list) %></td>
    <td><%= link_to 'Destroy', my_list_path(list), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

